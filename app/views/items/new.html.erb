<div class="d-flex justify-content-center">
  <div class="col-6">
    <%= simple_form_for @item, :class => "form-group" do |f| %>
      <%= f.input :name, :class => "form-control"%>
      <%= f.input :description, :class => "form-control"%>
      <%= f.input :quantity, :class => "form-control"%>
      <%= f.input :price, :class => "form-control"%>
      <%= f.input :enabled, :class => "form-control"%>
      <%= f.input :images, :input_html => { :multiple => true } %>
      <%= f.association :subtype, :class => "form-control"%>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
